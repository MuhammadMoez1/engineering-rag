FROM python:3.10-slim

WORKDIR /app

# Copy requirements (subset for frontend)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir streamlit requests

# Copy UI application
COPY ui/ ./ui/
COPY run_frontend.py .

# Expose port
EXPOSE 8501

# Run application
CMD ["python", "run_frontend.py"]

